{{>header}}

<link rel="stylesheet" href="static/styles/irma.min.css">

<main>
    <!-- START: template component(s) -->
    <div class="container" id="section-1">
        <div class="row">
            <div class="col-12" id="irma-form">
                <div id="irma-web-form"></div>
            </div>
        </div>
        <div class="row {{^brpfailed}}hidden{{/brpfailed}}" id="failed-brp">
            <div class="col-12">
                <h1>Er is iets fout gegaan</h1>
                <p class="lead">Kon uw persoonsgegevens nu niet ophalen.</p>
            </div>
        </div>
        <div class="row {{^irmafailed}}hidden{{/irmafailed}}" id="failed-irma">
            <div class="col-12">
                <h1>Er is iets fout gegaan</h1>
                <p class="lead">Kon uw persoonsgegevens niet in {{name}} laden.</p>
            </div>
        </div>
        <div class="row hidden" id="success">
            <div class="col-12">
                <h1>{{name}} opladen geslaagd!</h1>
                <a href="logout" class="btn btn-primary waves-effect waves-light display-table">
                    <span class="title"> Klik hier om uit te loggen.</span>
                </a>
            </div>
        </div>
    </div>

    <!-- END: template component(s) -->
</main>


<!-- Pass parameters to JS -->
<input id="session-ptr-u" type="hidden" value="{{{irmaSessionPtrU}}}" />
<input id="session-ptr-qr" type="hidden" value="{{{irmaSessionPtrQr}}}" />
<input id="session-token" type="hidden" value="{{{irmaSessionToken}}}" />
<input id="irmaServer" type="hidden" value="{{{irmaServer}}}" />
<input id="sessionResultEndpoint" type="hidden" value="{{{sessionResultEndpoint}}}" />
<!-- Load irma and page JS -->
<script src="static/scripts/irma.js"></script>
<script src="static/scripts/issue.js"></script>

{{>footer}}